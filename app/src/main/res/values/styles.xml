<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolBar" parent="AppTheme">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToogle</item>
        <item name="android:windowActionBarOverlay">@style/ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_account_circle_white_36dp</item>
    </style>

    <style name="AppTheme.DrawerArrowToogle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MyCustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <!--设置tab的宽度-->
        <!--<item name="tabMaxWidth">72dp</item> -->
        <!--设置tab的宽度-->
        <!--<item name="tabMinWidth">72dp</item>-->
        <item name="tabIndicatorColor">#ff0000</item> <!--指示器的颜色-->
        <item name="tabIndicatorHeight">0dp</item> <!--指示器的高度-->
        <item name="tabSelectedTextColor">@color/google_blue</item> <!--被选中tab的字体颜色-->
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item> <!--字体的设置-->

    </style>


    <style name="AppTheme.PopupOverlay" parent="AlertDialog.AppCompat.Light"/>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item> <!--字体大小-->
        <item name="android:textColor">@color/white</item> <!--默认字体大颜色-->
        <item name="textAllCaps">false</item> <!--是否自动转换成大写(如果是自定义样式必须是false)-->
    </style>

    <style name="Tran" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Text_Content">

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text_Content_grey_800">

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="btn_small" >

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text_Title">

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_dark</item>


    </style>
</resources>
